@model Book.Models.Category

@{
    ViewData["Title"] = "Delete";
}


<h3 class="text-danger text-center text-uppercase">Are you sure you want to delete this?</h3>

<form method="post" asp-action="Delete">


    <div class="border p-3 mb-4">
        <div class="row">
            <div>
                <h3 class="text-bg-danger text-center ">Delete Category </h3>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" disabled />

        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder" class="control-label"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />

        </div>

        <div class="col-6">
            <input type="submit" value="Delete" class="btn btn-danger"  />
            <a asp-action="Index" class="btn btn-warning">Back to List</a>
        </div>

    </div>
</form>



