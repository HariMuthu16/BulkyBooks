@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}
<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-2">
                    <div class="card  border-0 p-3 shadow  border-top border-5 rounded">
                     
                        <img src="@product.ImageUrl"  class="card-img-top rounded"  />
                        <div class="card-body pb-0">
                            <div class="p1">
                             <p class="card-title opacity-75 h5 text-uppercase text-dark text-center" >@product.Title</p>
                             <p class="card-title text-warning text-center">Author : @product.Author</p>
                            </div>
                            <div class="p1 mb-0">
                                <p class=" text-opacity-75 h6  text-dark text-center"> Price : ₹ @product.Price </p>
                                
                            </div>
                            <div class="p1">
                                <p class=" text-opacity-75 h6  text-dark text-center">As Low Price : ₹ @product.Price100</p>

                            </div>
                            <div class="p1">
                                    <a asp-route-id="@product.Id" asp-action="Details" asp-controller="Home" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                            </div>
                        </div>
                      
                     </div>
                </div>
            </div>

        </div>



    }
</div>

